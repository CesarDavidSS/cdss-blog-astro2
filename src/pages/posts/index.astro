---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/Section.astro";
import Card from "../../components/Card.astro";
import { sortPostsByDate } from "../../utils/data.util";

const allPosts = await Astro.glob("./*.md");
allPosts.sort(sortPostsByDate);
---

<BaseLayout>
  <Section>
    <div class="flex flex-col items-center mt-6 mb-12">
      <p class="px-14 py-6 text-center text-4xl font-bold">Todas las Entradas</p>
      {
        allPosts.map((post: any) => (
          <div class="my-6 basis-1 last:mb-0">
            <Card post={post} />
          </div>
        ))
      }
    </div>
  </Section>
</BaseLayout>
